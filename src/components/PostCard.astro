---
export interface Props {
  title: string;
  description: string;
  date: string;
  author: string;
  href?: string;
  imageSrc?: string;
  imageAlt?: string;
}

const {
  title,
  description,
  date,
  author,
  href = "#",
  imageSrc,
  imageAlt = title,
} = Astro.props;
---

<article>
  <a
    href={href}
    class="block rounded-2xl border border-white/10 bg-neutral-900/90 p-6 transition-colors sm:p-8"
  >
    <div class="flex items-center justify-between gap-6">
      <div class="min-w-0">
        <h2 class="text-2xl font-semibold leading-tight text-white">
          {title}
        </h2>
        <p class="mt-3 text-sm leading-relaxed text-neutral-300 sm:text-base">
          {description}
        </p>
        <p class="mt-6 text-xs uppercase tracking-[0.2em] text-neutral-400">
          {date} - {author}
        </p>
      </div>

      {
        imageSrc && (
          <div
            class="flex h-24 w-24 shrink-0 items-center justify-center overflow-hidden rounded-xl bg-neutral-900/90 ring-1 ring-white/10 sm:h-28 sm:w-28"
            aria-hidden="true"
          >
            <img
              src={imageSrc}
              alt={imageAlt}
              loading="lazy"
              class="h-full w-full object-cover"
            />
          </div>
        )
      }
    </div>
  </a>
</article>
